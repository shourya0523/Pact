{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/hooks/*": [
        "app/hooks/*"
      ],
      "@/components/*": [
        "app/components/common/*"
      ],
      "@/screens/*": [
        "app/screens/*"
      ],
      "@/utils/*": [
        "app/utils/*"
      ],
      "@/constants/*": [
        "app/constants/*"
      ],
      "@/navigation/*": [
        "app/navigation/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ]
}
